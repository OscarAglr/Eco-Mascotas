@using Eco_Mascotas.Models;
@model Tag
@{
    ViewData["Title"] = "Create";
}
<h2 class="text-info">Agregar Categoria</h2>

<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="grid row">
            <div class="col-2">
                <label asp-for="TagName"></label>
            </div>
            <div class="col-5">
                <input asp-for="TagName" class="form-control" />
            </div>
            <span asp-validation-for="TagName" class="text-danger"></span>
        </div>
        <div class="grid">
            <input type="submit" class="btn btn-primary" value="Guardar" />
            <a asp-action="Index" class="btn btn-success">Atras</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}