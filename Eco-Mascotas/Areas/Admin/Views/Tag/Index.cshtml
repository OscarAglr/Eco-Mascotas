@using Eco_Mascotas.Models;
@model IEnumerable<Tag>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Agregar Etiqueta</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression: t => t.TagName)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TagName</td>
                <td>
                    <partial name="~/Views/Shared/_ButtonPartial.cshtml" model="@item.Id" />
                </td>
            </tr>
        }
    </table>

</div>
